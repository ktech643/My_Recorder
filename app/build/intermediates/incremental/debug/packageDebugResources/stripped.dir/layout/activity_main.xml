<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:keepScreenOn="true"
    tools:context=".util.MainActivity">

    <!-- ViewPager2 for fragment switching -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Custom bottom navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/btnNavLive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iconLive"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_live"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/textLive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/live"
                android:textSize="10sp"
                android:textColor="@color/text_normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnNavPlayback"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iconPlayback"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_playback"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/textPlayback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/playback"
                android:textSize="10sp"
                android:textColor="@color/text_normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnNavStreaming"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iconStreaming"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_stream"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/textStreaming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/streaming"
                android:textSize="10sp"
                android:textColor="@color/text_normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnNavSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iconSettings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_settings"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/textSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textSize="10sp"
                android:textColor="@color/text_normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnNavHide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iconHide"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_hide"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/textHide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hide"
                android:textSize="10sp"
                android:textColor="@color/text_normal" />

        </LinearLayout>

    </LinearLayout>

    <!-- Recording time display -->
    <TextView
        android:id="@+id/txt_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="00:00:00"
        android:textColor="@color/red"
        android:textSize="@dimen/textsize_small"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Overlay view -->
    <View
        android:id="@+id/view_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#333333"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
