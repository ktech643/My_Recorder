<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xm, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="NoTitleTheme" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TransparentTheme" parent="NoTitleTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="loginButton" parent="normalButton">
        <item name="android:background">@drawable/bg_rectangle</item>
    </style>

    <style name="Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="normalButton" parent="android:Widget.Button">
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:background">@drawable/bg_rectangle</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="normalText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textColorHint">@color/text_light</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
<!--        <item name="android:fontFamily">@font/font_sfcompacttext_regular</item>-->
        <item name="android:padding">@dimen/image_very_small</item>
    </style>

    <style name="normalEdit" parent="android:Widget.EditText">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textColorHint">@color/text_light</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:padding">@dimen/margin_normal</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NumberPickerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/blue</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/blue</item>
    </style>

    <style name="EditScreenTextInputLayoutStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/textInputLayout</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorHint">@color/text_light</item>
    </style>

    <style name="UsbDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">60%</item>
    </style>

    <style name="SpinnerWithArrow" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:paddingRight">12dp</item>
        <item name="android:drawableRight">@drawable/arrow_down</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <!-- Add this style for playback items -->
    <style name="PlaybackItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:background">@drawable/playback_item_elegant</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Elegant playback item style with enhanced visual appeal -->
    <style name="PlaybackItemElegantStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/playback_item_elegant</item>
        <item name="android:padding">20dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Add this style for light gray cards -->
    <style name="LightGrayCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/card_background_light_gray</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Enhanced Card Style with white background and shadow -->
    <style name="EnhancedCardStyle">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>
    
    <!-- Bottom Navigation Text Appearance -->
    <style name="BottomNavigationTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


</resources>