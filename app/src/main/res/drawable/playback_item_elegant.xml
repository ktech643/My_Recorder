<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10000000" />
            <corners android:radius="8dp" />
            <padding
                android:bottom="3dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    
    <!-- Inner shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#08000000" />
            <corners android:radius="8dp" />
            <padding
                android:bottom="2dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
    
    <!-- Item background with subtle gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/lighter_gray"
                android:endColor="@color/light_gray"
                android:type="linear" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" />
        </shape>
    </item>
    
    <!-- Subtle highlight at top -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
