<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rotation Options"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="16dp" />

    <!-- Rotation Degrees Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rotation (Select One)"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:paddingBottom="8dp" />

    <RelativeLayout
        android:id="@+id/ly_rotate_90"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_rotate_90_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_rotate_90"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotate 90°"
            android:textSize="16sp"
            android:layout_toEndOf="@id/iv_rotate_90_icon"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/iv_rotate_90_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_more"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:tint="@color/teal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ly_rotate_180"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_rotate_180_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_rotate_90"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotate 180°"
            android:textSize="16sp"
            android:layout_toEndOf="@id/iv_rotate_180_icon"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/iv_rotate_180_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_more"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:tint="@color/teal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ly_rotate_270"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_rotate_270_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_rotate_90"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotate 270°"
            android:textSize="16sp"
            android:layout_toEndOf="@id/iv_rotate_270_icon"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/iv_rotate_270_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_more"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:tint="@color/teal" />
    </RelativeLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:background="@android:color/darker_gray" />

    <!-- Flip and Mirror Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flip &amp; Mirror (Multi-Select)"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:paddingBottom="8dp" />

    <RelativeLayout
        android:id="@+id/ly_flip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_flip_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_flip"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flip Vertical"
            android:textSize="16sp"
            android:layout_toEndOf="@id/iv_flip_icon"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/iv_flip_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/checkbox_on_background"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:tint="@color/teal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ly_mirror"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_mirror_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_mirror"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mirror Horizontal"
            android:textSize="16sp"
            android:layout_toEndOf="@id/iv_mirror_icon"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/iv_mirror_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/checkbox_on_background"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:tint="@color/teal" />
    </RelativeLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:background="@android:color/darker_gray" />

    <!-- Normal/Reset Option -->
    <RelativeLayout
        android:id="@+id/ly_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_normal_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_camera"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal (Reset All)"
            android:textSize="16sp"
            android:layout_toEndOf="@id/iv_normal_icon"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/iv_normal_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_more"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:tint="@color/teal" />
    </RelativeLayout>

</LinearLayout>