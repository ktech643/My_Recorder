<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_capture"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="28dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/btn_start"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_mute"
        android:layout_width="@dimen/control_button_size"
        android:layout_height="@dimen/control_button_size"
        android:layout_above="@id/btn_capture"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:alpha="0.3"
        android:background="@drawable/button"
        android:src="@drawable/button_mute_off"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_settings"
        android:layout_width="@dimen/control_button_size"
        android:layout_height="@dimen/control_button_size"
        android:layout_above="@id/btn_mute"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:alpha="0.3"
        android:background="@drawable/button"
        android:src="@drawable/button_settings"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_flash"
        android:layout_width="@dimen/control_button_size"
        android:layout_height="@dimen/control_button_size"
        android:layout_below="@id/btn_capture"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:alpha="0.3"
        android:background="@drawable/button"
        android:src="@drawable/button_flash"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_shoot"
        android:layout_width="@dimen/control_button_size"
        android:layout_height="@dimen/control_button_size"
        android:layout_below="@id/btn_flash"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:alpha="0.3"
        android:background="@drawable/button"
        android:src="@drawable/button_shoot"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_flip"
        android:layout_width="@dimen/control_button_size"
        android:layout_height="@dimen/control_button_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:alpha="0.3"
        android:background="@drawable/button"
        android:src="@drawable/button_flip"
        android:visibility="gone" />

</merge>